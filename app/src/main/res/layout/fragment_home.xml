<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Home Page"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:textSize="30dp"
        android:id="@+id/welcome"
        android:textStyle="bold"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome"
        android:id="@+id/q1"
        android:text="Quiz-01"
        android:textSize="20dp"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:padding="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/q1"
        android:id="@+id/q2"
        android:layout_margin="20dp"
        android:text="Quiz-03"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:backgroundTint="@color/black"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/q2"
        android:id="@+id/q3"
        android:layout_margin="20dp"
        android:text="Quiz-03"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:backgroundTint="#034efc"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/q3"
        android:id="@+id/q4"
        android:layout_margin="20dp"
        android:text="Quiz-04"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:backgroundTint="#91073a"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purchase To Unlock More Quizzes"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:textSize="20dp"
        android:layout_below="@id/q4"
        android:textStyle="bold"
        android:textColor="#91073a"
        />
</RelativeLayout>